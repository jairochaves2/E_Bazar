<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFA500"
    tools:context="com.example.rafael.e_bazar.CVestuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/btnVoltar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro de Vestuário Usado"
            android:id="@+id/tVTitulo"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


                <RadioButton
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Calça"
                    android:id="@+id/chbCalca"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Blusa"
                    android:id="@+id/chBblusa"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Vestido"
                    android:id="@+id/chBvestido"
                    android:checked="false" />


                <RadioButton
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Saia"
                    android:id="@+id/chBsaia"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Meia"
                    android:id="@+id/chBmeia"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Calçado"
                    android:id="@+id/chBcalcado"
                    android:checked="false" />


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamanho"
            android:id="@+id/tVTamanho"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eTTamanho"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cor"
            android:id="@+id/tVCor"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eTCor"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado de Conservação"
            android:id="@+id/tVEstado"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eTEstado"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço"
            android:id="@+id/tVPreco"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eTPreco"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indicação de ONG"
            android:id="@+id/tVIONG"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eTIONG"
            android:textColor="#000000"/>

    </LinearLayout>

    <Button
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/btnVoltar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"/>

    <Button
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/btnCadastrar"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/linearLayout"
        android:textColor="#000000"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rafael.e_bazar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- Splash screen -->
        <activity
            android:name="com.example.rafael.e_bazar.Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity Principal -->
        <activity
            android:name="com.example.rafael.e_bazar.MainActivity"
            android:label="@string/app_name" />
        <activity android:name="com.example.rafael.e_bazar.Listagem" />
        <activity android:name="com.example.rafael.e_bazar.CVestuario" />
        <activity android:name="com.example.rafael.e_bazar.Lista_Vestuario" />
        <activity android:name="com.example.rafael.e_bazar.Configuracoes" />
        <activity android:name="com.example.rafael.e_bazar.Home" />
        <activity android:name="com.example.rafael.e_bazar.Lista_Ongs" />
        <activity android:name="com.example.rafael.e_bazar.Cadastro_Ong" />
    </application>

</manifest>